<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:minHeight">@dimen/top_bar_height</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:theme">@style/PopWindowStyle</item>
    </style>
    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/titleColor</item>
        <item name="actionMenuTextColor">@color/titleColor</item>
    </style>
    <declare-styleable name="WaveSideBarView">
        <attr name="sidebarTextColor" format="color|reference"/>
        <attr name="sidebarBackgroundColor" format="color|reference"/>
        <attr name="sidebarChooseTextColor" format="color|reference"/>
        <attr name="sidebarTextSize" format="dimension"/>
        <attr name="sidebarLargeTextSize" format="dimension"/>
        <attr name="sidebarRadius" format="dimension"/>
        <attr name="sidebarBallRadius" format="dimension"/>
    </declare-styleable>
    <style name="dialogWindowBottomAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="dialogWindowTopAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>
</resources>