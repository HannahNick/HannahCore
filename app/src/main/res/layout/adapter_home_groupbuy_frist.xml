<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="185dp"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingTop="@dimen/item_short_margin"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rl_two_tofu_click_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_bgimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:id="@+id/ll_two_tofu_group_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_tofu_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:paddingRight="@dimen/item_long_margin"
                android:paddingLeft="@dimen/item_long_margin"
                android:paddingTop="@dimen/item_short_margin"
                android:paddingBottom="@dimen/item_short_margin"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/item_short_margin"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_group_one_first_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白糖"
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/tv_group_one_second_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新塘上线"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>